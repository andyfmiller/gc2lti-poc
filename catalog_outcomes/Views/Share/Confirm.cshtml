@model ShareConfirmModel
@{
    ViewData["Title"] = "Confirm";
}

<h4>For @Model.CourseName - All Students</h4>

@using (Html.BeginForm("Assign", "Share", FormMethod.Get, new { @class="form-horizontal", role="form"}))
{
    @Html.HiddenFor(m => m.CourseId)

    <div class="form-group">
        <label for="title" class="control-label col-sm-2">Title</label>
        <div class="col-sm-10">
            <input id="title" name="title" type="text" class="form-control" value="@Model.Title" />
        </div>
    </div>
    <div class="form-group">
        <label for="description" class="control-label col-sm-2">Instructions</label>
        <div class="col-sm-10">
            <input id="description" name="description" class="form-control" value="@Model.Description" />
        </div>
    </div>
    <div class="form-group">
        <label for="url" class="control-label col-sm-2">LTI Tool URL</label>
        <div class="col-sm-10">
            <input id="url" name="url" type="text" class="form-control" value="@Model.Url" />
        </div>
    </div>
    <div class="form-group">
        <label for="maxPoints" class="control-label col-sm-2">MaxPoints</label>
        <div class="col-sm-10">
            <input id="maxPoints" name="maxPoints" type="number" class="form-control" value="@Model.MaxPoints" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="submit" type="submit" class="btn btn-primary">Assign</button>
        </div>
    </div>
    
}
