@section Scripts {

    <script type="text/javascript">
        function share(shareUrl, title, description) {
            window.open("Share"
                + "?url=" + encodeURI(shareUrl)
                + "&title=" + title
                + "&description=" + description,
                "_blank",
                "toolbar=no,width=640,height=400,left=100,top=100");
            return false;
        }
    </script>

}
